            "example": "2.0"
          },
          "_links": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Link"
            }
          }
        }
      },
      "UFResponse": {
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UFLinks"
            }
          },
          "messages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Message"
            }
          },
          "version": {
            "type": "string",
            "description": "Versao do envelope de resposta",
            "example": "2.0"
          }
        }
      },
      "Message": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int",
            "description": "Codigo Resposta",
            "example": 200
          },
          "message": {
            "type": "string",
            "description": "Descricao da mensagem de resposta",
            "example": "OK"
          }
        }
      },
      "Municipio": {
        "required": [
          "codigo",
          "nome"
        ],
        "properties": {
          "codigo": {
            "type": "integer",
            "format": "int",
            "description": "Codigo IBGE do Municipio",
            "example": 5003702
          },
          "nome": {
            "type": "string",
            "description": "Nome do Municipio",
            "example": "Dourados"
          },
          "uf": {
            "$ref": "#/components/schemas/Uf"
          }
        }
      },
      "MunicipioLinks": {
        "type": "object",
        "properties": {
          "codigo": {
            "type": "integer",
